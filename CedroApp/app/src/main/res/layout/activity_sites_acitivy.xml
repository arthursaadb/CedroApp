<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recyclerSites.SitesActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/idRecycler"
        android:layout_width="match_parent"
        android:layout_height="479dp"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/newSite"
        android:layout_width="50dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/cardview_light_background"
        app:backgroundTint="@color/cedro_color"
        app:elevation="0dp"
        app:rippleColor="@color/cardview_light_background"
        tools:targetApi="@color/cardview_light_background" />


</RelativeLayout>